{% extends 'base.twig' %}

{% block content %}
<section id="searchBlock" class="hidden">
    <section class="row">
        <div id="winSplash" class="medium-5 columns callout">
            <h3 class="text-center">Victoire !</h3>
            <h4 id="winSplashPlayer" class="text-center">du joueur <span class="winPlayer player-0">X</span> <span class="winPlayer player-1">O</span></h4>
        </div>
        <div id="drawSplash" class="medium-5 columns callout">
            <h3 class="text-center">&Eacute;galité !</h3>
        </div>
    </section>
    <section class="row">
        <div class="actionBlock">
            <a class="btn btn-restart">Nouvelle partie</a>
        </div>
    </section>
</section>

<section id="boardBlock">
    <div class="row">
        <div id="screen" class="medium-5 columns">
            <div id="boards">

            </div>
        </div>
    </div>
    <div class="row">
        <div class="actionBlock">
            <div class="score">
                X <span class="score-0">0</span>
            </div>

            <a class="btn-reset inline">Reset</a>

            <div class="score">
                Y <span class="score-1">0</span>
            </div>
        </div>
        <div class="medium-12 actionBlock text-center">
            Cliquez sur le bouton reset, réinitialise le plateau de jeu et les scores.
        </div>
    </div>
</section>

{% endblock %}


{% block javascript %}
<script>
    Game.init({{ mode }});

    Game.addPlayer('boussad');
    Game.addPlayer('gabriel');

    document.querySelector('.btn-reset').addEventListener('click', () => {
        Interactive.loadButtonReset({reset: true, clearScore: true});
    });
    document.querySelector('.btn-restart').addEventListener('click', () => {
        Interactive.loadButtonReset({reset: true});
    });

</script>
{% endblock %}
